@page
@model InteraktifKredi.Pages.Raporlar.DetayModel
@{
    ViewData["Title"] = "Rapor Detayı";
}

<div class="report_dashboard_container">
    <!-- Geri Butonu -->
    <div class="report_dashboard__back">
        <a href="/Raporlar/Liste" class="btn_ghost">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" style="width: 20px; height: 20px; margin-right: 8px; vertical-align: middle;">
                <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
            </svg>
            Geri Dön
        </a>
    </div>

    @if (Model.IsLoading)
    {
        <div class="report_dashboard__loading">
            <div class="report_dashboard__loading__spinner"></div>
            <p class="report_dashboard__loading__text">Rapor detayı yükleniyor...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="form_error_message">
            <span class="form_error_message__icon">⚠</span>
            <span class="form_error_message__text">@Model.ErrorMessage</span>
        </div>
    }
    else if (Model.ReportDetail == null)
    {
        <div class="report_dashboard__empty">
            <div class="report_dashboard__empty__icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                </svg>
            </div>
            <h3 class="report_dashboard__empty__title">Rapor bulunamadı</h3>
            <p class="report_dashboard__empty__text">Aradığınız rapor bulunamadı veya erişim yetkiniz yok.</p>
        </div>
    }
    else
    {
        var report = Model.ReportDetail;
        
        <!-- 1. ÖZET KARTLAR (Scoreboard) -->
        <div class="report_dashboard__scoreboard">
            <div class="scoreboard_card scoreboard_card--credit_score">
                <div class="scoreboard_card__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                </div>
                <div class="scoreboard_card__content">
                    <div class="scoreboard_card__label">Kredi Notu</div>
                    <div class="scoreboard_card__value">@report.CreditScore</div>
                </div>
            </div>

            <div class="scoreboard_card scoreboard_card--total_limit">
                <div class="scoreboard_card__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                    </svg>
                </div>
                <div class="scoreboard_card__content">
                    <div class="scoreboard_card__label">Toplam Limit</div>
                    <div class="scoreboard_card__value">@FormatCurrency(report.TotalLimit)</div>
                </div>
            </div>

            <div class="scoreboard_card scoreboard_card--total_risk">
                <div class="scoreboard_card__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"/>
                    </svg>
                </div>
                <div class="scoreboard_card__content">
                    <div class="scoreboard_card__label">Toplam Borç</div>
                    <div class="scoreboard_card__value">@FormatCurrency(report.TotalRisk)</div>
                </div>
            </div>

            <div class="scoreboard_card scoreboard_card--delayed">
                <div class="scoreboard_card__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                </div>
                <div class="scoreboard_card__content">
                    <div class="scoreboard_card__label">Gecikme Sayısı</div>
                    <div class="scoreboard_card__value">@report.DelayedAccountCount</div>
                </div>
            </div>
        </div>

        <!-- 2. KREDİ NOTU ANALİZİ -->
        <div class="report_dashboard__section">
            <div class="dashboard_card">
                <div class="dashboard_card__header">
                    <h2 class="dashboard_card__title">Kredi Notu Analizi</h2>
                </div>
                <div class="dashboard_card__body">
                    <div class="credit_score_analysis">
                        <div class="credit_score_analysis__top">
                            <div class="credit_score_analysis__main">
                                <div class="credit_score_analysis__header">
                                    <div class="credit_score_analysis__title">Kredi Notunuz</div>
                                    <div class="credit_score_analysis__score credit_score_analysis__score--@GetCreditScoreClass(report.CreditScore)">
                                        @report.CreditScore
                                    </div>
                                </div>
                                <div class="credit_score_analysis__scale">
                                    <div class="credit_score_scale">
                                        <div class="credit_score_scale__bar">
                                            <div class="credit_score_scale__segment credit_score_scale__segment--very_risky"></div>
                                            <div class="credit_score_scale__segment credit_score_scale__segment--risky"></div>
                                            <div class="credit_score_scale__segment credit_score_scale__segment--moderate"></div>
                                            <div class="credit_score_scale__segment credit_score_scale__segment--good"></div>
                                            <div class="credit_score_scale__segment credit_score_scale__segment--excellent"></div>
                                            <div class="credit_score_scale__indicator" style="left: @GetCreditScorePosition(report.CreditScore)%">
                                                <div class="credit_score_scale__indicator__arrow"></div>
                                            </div>
                                        </div>
                                        <div class="credit_score_scale__labels">
                                            <span class="credit_score_scale__label">1</span>
                                            <span class="credit_score_scale__label">1900</span>
                                        </div>
                                        <div class="credit_score_scale__segments">
                                            <span class="credit_score_scale__segment_label">EN RİSKLİ</span>
                                            <span class="credit_score_scale__segment_label">ORTA RİSKLİ</span>
                                            <span class="credit_score_scale__segment_label">AZ RİSKLİ</span>
                                            <span class="credit_score_scale__segment_label">İYİ</span>
                                            <span class="credit_score_scale__segment_label">ÇOK İYİ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="credit_score_analysis__side">
                                <div class="credit_score_analysis__metrics">
                                    <div class="credit_score_metric">
                                        <span class="credit_score_metric__label">Tarihsel En Kötü Durum</span>
                                        <span class="credit_score_metric__value">@report.WorstPaymentStatusEver dönem</span>
                                    </div>
                                    @if (report.LastCreditUsageDate.HasValue)
                                    {
                                        <div class="credit_score_metric">
                                            <span class="credit_score_metric__label">Son Kredi Kullanımı</span>
                                            <span class="credit_score_metric__value">@report.LastCreditUsageDate.Value.ToString("dd.MM.yyyy")</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(report.QueryNumber))
                                    {
                                        <div class="credit_score_metric">
                                            <span class="credit_score_metric__label">Sorgu No</span>
                                            <span class="credit_score_metric__value credit_score_metric__value--mono">@report.QueryNumber</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="credit_score_analysis__reasons">
                            <h3 class="credit_score_analysis__reasons_title">Öncelik Sebepler</h3>
                            <div class="credit_score_analysis__reasons_list">
                                @if (!string.IsNullOrEmpty(report.CreditScoreReasonCode1))
                                {
                                    <div class="reason_code_item">
                                        <div class="reason_code_badge">@report.CreditScoreReasonCode1</div>
                                        <div class="reason_code_description">@GetReasonCodeDescription(report.CreditScoreReasonCode1)</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(report.CreditScoreReasonCode2))
                                {
                                    <div class="reason_code_item">
                                        <div class="reason_code_badge">@report.CreditScoreReasonCode2</div>
                                        <div class="reason_code_description">@GetReasonCodeDescription(report.CreditScoreReasonCode2)</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(report.CreditScoreReasonCode3))
                                {
                                    <div class="reason_code_item">
                                        <div class="reason_code_badge">@report.CreditScoreReasonCode3</div>
                                        <div class="reason_code_description">@GetReasonCodeDescription(report.CreditScoreReasonCode3)</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(report.CreditScoreReasonCode4))
                                {
                                    <div class="reason_code_item">
                                        <div class="reason_code_badge">@report.CreditScoreReasonCode4</div>
                                        <div class="reason_code_description">@GetReasonCodeDescription(report.CreditScoreReasonCode4)</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. AKTİF KREDİLER & KARTLAR -->
        @if (report.ActiveCredits.Any())
        {
            <div class="report_dashboard__section">
                <div class="dashboard_card">
                    <div class="dashboard_card__header">
                        <h2 class="dashboard_card__title">Aktif Krediler & Kartlar</h2>
                        <span class="dashboard_card__badge">@report.ActiveCredits.Count Adet</span>
                    </div>
                    <div class="dashboard_card__body">
                        <div class="credits_list">
                            @foreach (var credit in report.ActiveCredits)
                            {
                                <div class="credit_item">
                                    <div class="credit_item__header">
                                        <div class="credit_item__institution">
                                            <span class="credit_item__institution_code">@credit.InstitutionCode</span>
                                            <span class="credit_item__type">@GetCreditTypeName(credit.CreditType)</span>
                                        </div>
                                        <div class="credit_item__reference">@credit.RecordReferenceNumber</div>
                                    </div>
                                    <div class="credit_item__limit_info">
                                        <div class="credit_item__limit_label">Limit:</div>
                                        <div class="credit_item__limit_value">@FormatCurrency(credit.CreditLimit)</div>
                                    </div>
                                    <div class="credit_item__limit_usage">
                                        <div class="credit_item__limit_usage_label">Limit Kullanımı</div>
                                        <div class="credit_item__progress_bar">
                                            <div class="credit_item__progress_fill" style="width: @(Math.Min(credit.LimitUsageRatio * 100, 100))%"></div>
                                        </div>
                                    </div>
                                    <div class="credit_item__details">
                                        <div class="credit_item__detail_row">
                                            <span class="credit_item__detail_label">Bakiye:</span>
                                            <span class="credit_item__detail_value">@FormatCurrency(credit.TotalBalance)</span>
                                        </div>
                                        <div class="credit_item__detail_row">
                                            <span class="credit_item__detail_label">Gecikme:</span>
                                            <span class="credit_item__detail_value">@FormatCurrency(credit.DelayedBalance)</span>
                                        </div>
                                    </div>
                                    @if (credit.OpeningDate.HasValue)
                                    {
                                        <div class="credit_item__meta">
                                            <span>Açılış: @credit.OpeningDate.Value.ToString("dd.MM.yyyy")</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(credit.PaymentHistory))
                                    {
                                        <div class="credit_item__payment_history">
                                            <div class="payment_history_label">Ödeme Geçmişi (En güncel ay sağ)</div>
                                            <div class="payment_history_chart">
                                                @foreach (var payment in credit.PaymentHistory.Reverse().Take(24))
                                                {
                                                    var statusClass = GetPaymentStatusClass(payment);
                                                    <div class="payment_history_item payment_history_item--@statusClass" title="@GetPaymentStatusTooltip(payment)">
                                                        @if (statusClass == "paid")
                                                        {
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                <path d="M10 3L4.5 8.5L2 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                            </svg>
                                                        }
                                                        else if (statusClass == "delayed")
                                                        {
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                <path d="M3 3L9 9M9 3L3 9" stroke="white" stroke-width="2" stroke-linecap="round"/>
                                                            </svg>
                                                        }
                                                        else if (statusClass == "unknown")
                                                        {
                                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                <circle cx="6" cy="6" r="4.5" stroke="white" stroke-width="1.5" fill="none"/>
                                                                <text x="6" y="8.5" font-size="7" fill="white" text-anchor="middle" font-weight="bold" font-family="Arial, sans-serif">?</text>
                                                            </svg>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- 4. KAPANMIŞ HESAPLAR & GEÇMİŞ -->
        @if (report.ClosedCredits.Any())
        {
            <div class="report_dashboard__section">
                <div class="dashboard_card">
                    <div class="dashboard_card__header">
                        <h2 class="dashboard_card__title">Kapanmış Hesaplar & Geçmiş</h2>
                        <span class="dashboard_card__badge">@report.ClosedCredits.Count Adet</span>
                    </div>
                    <div class="dashboard_card__body">
                        <div class="credits_timeline">
                            @foreach (var credit in report.ClosedCredits.OrderByDescending(c => c.ClosingDate))
                            {
                                <div class="timeline_item">
                                    <div class="timeline_item__marker"></div>
                                    <div class="timeline_item__content">
                                        <div class="timeline_item__header">
                                            <div class="timeline_item__institution">
                                                <span class="timeline_item__institution_code">@credit.InstitutionCode</span>
                                                <span class="timeline_item__type">@GetCreditTypeName(credit.CreditType)</span>
                                            </div>
                                            @if (credit.ClosingDate.HasValue)
                                            {
                                                <div class="timeline_item__date">@credit.ClosingDate.Value.ToString("dd.MM.yyyy")</div>
                                            }
                                        </div>
                                        <div class="timeline_item__details">
                                            <div class="timeline_item__detail">
                                                <span class="timeline_item__detail_label">Limit:</span>
                                                <span class="timeline_item__detail_value">@FormatCurrency(credit.CreditLimit)</span>
                                            </div>
                                            <div class="timeline_item__detail">
                                                <span class="timeline_item__detail_label">Son Bakiye:</span>
                                                <span class="timeline_item__detail_value">@FormatCurrency(credit.TotalBalance)</span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(credit.PaymentHistory))
                                        {
                                            <div class="timeline_item__payment_history">
                                                <div class="payment_history_label">Ödeme Geçmişi (En güncel ay sağ):</div>
                                                <div class="payment_history_chart">
                                                    @foreach (var payment in credit.PaymentHistory.Reverse().Take(24))
                                                    {
                                                        var statusClass = GetPaymentStatusClass(payment);
                                                        <div class="payment_history_item payment_history_item--@statusClass" title="@GetPaymentStatusTooltip(payment)">
                                                            @if (statusClass == "paid")
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                    <path d="M10 3L4.5 8.5L2 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                                                </svg>
                                                            }
                                                            else if (statusClass == "delayed")
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                    <path d="M3 3L9 9M9 3L3 9" stroke="white" stroke-width="2" stroke-linecap="round"/>
                                                                </svg>
                                                            }
                                                            else if (statusClass == "unknown")
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" fill="none" style="width: 100%; height: 100%;">
                                                                    <circle cx="6" cy="6" r="4.5" stroke="white" stroke-width="1.5" fill="none"/>
                                                                    <text x="6" y="8.5" font-size="7" fill="white" text-anchor="middle" font-weight="bold" font-family="Arial, sans-serif">?</text>
                                                                </svg>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@functions {
    private string FormatCurrency(decimal amount)
    {
        return new System.Globalization.CultureInfo("tr-TR").NumberFormat.CurrencySymbol + 
               amount.ToString("N2", new System.Globalization.CultureInfo("tr-TR"));
    }

    private string GetCreditTypeName(string creditType)
    {
        // cursorrulesreport.md'ye göre kredi türü karşılıkları
        return creditType switch
        {
            "23" => "Kredi Kartı",
            "26" => "KMH (Kredili Mevduat Hesabı)",
            "02" => "İhtiyaç Kredisi",
            "03" => "Konut Kredisi",
            "TK" => "Taşıt Kredisi",
            _ => $"Kredi Türü {creditType}"
        };
    }

    private string GetPaymentStatusClass(char payment)
    {
        // cursorrulesreport.md'ye göre ödeme performans durum kodları
        // '0' = Başarılı (Yeşil + Check İkonu)
        // 'K' veya 0'dan büyük sayı = Gecikme (Kırmızı + Çarpı İkonu)
        // 'X' = Bilinmiyor (Gri + Soru İşareti İkonu)
        if (payment == '0')
        {
            return "paid";
        }
        else if (payment == 'X' || payment == 'x')
        {
            return "unknown";
        }
        else if (char.IsDigit(payment) && payment > '0')
        {
            return "delayed";
        }
        else if (payment == 'K' || payment == 'k')
        {
            return "delayed";
        }
        else
        {
            return "unknown";
        }
    }

    private string GetPaymentStatusTooltip(char payment)
    {
        if (payment == '0')
        {
            return "Ödeme zamanında yapılmıştır";
        }
        else if (payment == 'X' || payment == 'x')
        {
            return "Bilinmiyor - İşlem yapılmamış veya veri eksik";
        }
        else if (char.IsDigit(payment) && payment > '0')
        {
            return $"Gecikme - {payment} dönemlik gecikme";
        }
        else if (payment == 'K' || payment == 'k')
        {
            return "Gecikme";
        }
        else
        {
            return "Bilinmeyen durum";
        }
    }

    private string GetCreditScoreClass(string creditScore)
    {
        if (int.TryParse(creditScore, out int score))
        {
            if (score >= 1500) return "excellent";
            if (score >= 1200) return "good";
            if (score >= 900) return "fair";
            if (score >= 600) return "poor";
            return "very_poor";
        }
        return "unknown";
    }

    private string GetCreditScoreStatus(string creditScore)
    {
        if (int.TryParse(creditScore, out int score))
        {
            if (score >= 1500) return "Mükemmel";
            if (score >= 1200) return "İyi";
            if (score >= 900) return "Orta";
            if (score >= 600) return "Düşük";
            return "Çok Düşük";
        }
        return "Bilinmiyor";
    }

    private string GetReasonCodeDescription(string? reasonCode)
    {
        if (string.IsNullOrEmpty(reasonCode)) return "";
        
        // KKB sebep kodları açıklamaları (genel kategoriler)
        return reasonCode switch
        {
            "01" => "Kredi geçmişi yetersiz",
            "02" => "Yüksek limit kullanımı",
            "03" => "Gecikme geçmişi",
            "04" => "Takip kaydı",
            "05" => "Yüksek borç yükü",
            "06" => "Kredi geçmişi kısa",
            "07" => "Çoklu kredi başvurusu",
            "08" => "Gelir yetersizliği",
            "09" => "Meslek riski",
            "10" => "Yaş faktörü",
            "11" => "Eğitim durumu",
            "12" => "Medeni durum",
            "13" => "İkamet süresi",
            "14" => "İş süresi",
            "15" => "Sektör riski",
            "16" => "Gelir düzensizliği",
            "17" => "Kredi kartı kullanımı",
            "18" => "Nakit kredi kullanımı",
            "19" => "Konut kredisi yükü",
            "20" => "Taşıt kredisi yükü",
            "21" => "İhtiyaç kredisi yükü",
            "22" => "Kredi kartı limiti yüksek",
            "23" => "Toplam limit yüksek",
            "24" => "Risk oranı yüksek",
            "25" => "Gecikme sıklığı",
            "26" => "Ödeme düzensizliği",
            "27" => "Kredi geçmişi olumsuz",
            "28" => "Takip süreci",
            "29" => "Yüksek borç/limit oranı",
            "30" => "Çoklu finansal kurum",
            _ => $"Sebep Kodu: {reasonCode}"
        };
    }

    private string GetCreditScorePosition(string creditScore)
    {
        // Kredi notunu 1-1900 arası skala üzerinde pozisyon olarak hesapla
        if (int.TryParse(creditScore, out int score))
        {
            // 1-1900 arası skala, yüzde olarak pozisyon
            double position = ((score - 1) / 1899.0) * 100;
            return Math.Max(0, Math.Min(100, position)).ToString("F2", System.Globalization.CultureInfo.InvariantCulture);
        }
        return "0";
    }
}
