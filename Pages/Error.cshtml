@page
@model InteraktifKredi.Pages.ErrorModel
@{
    ViewData["Title"] = "Hata";
}

<div class="error_container">
    <div class="error_content">
        <div class="error_icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
        </div>
        <h1 class="error_title">Bir Hata Oluştu</h1>
        <p class="error_message">
            Üzgünüz, işleminiz sırasında beklenmeyen bir hata oluştu. 
            Lütfen daha sonra tekrar deneyin veya müşteri hizmetlerimizle iletişime geçin.
        </p>
        
        @if (Model.ShowRequestId)
        {
            <div class="error_request_id">
                <span class="error_request_id__label">İstek ID:</span>
                <code class="error_request_id__value">@Model.RequestId</code>
            </div>
        }

        <div class="error_actions">
            <a href="/Dashboard" class="btn_primary">Ana Sayfaya Dön</a>
            <a href="/SSS" class="btn_secondary">Yardım Merkezi</a>
        </div>
    </div>
</div>
